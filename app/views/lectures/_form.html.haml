= form_for @lecture do |f|
  - if @lecture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lecture.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lecture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :room
    = f.number_field :room
  .field
    = f.label :teacher
    = f.text_field :teacher
  .field
    = f.label :group_num
    = f.number_field :group_num
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :starts_at
    = f.datetime_select :starts_at
  .field
    = f.label :ends_at
    = f.datetime_select :ends_at
  .actions
    = f.submit 'Save'